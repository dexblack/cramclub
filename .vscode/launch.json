    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main CramClub",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cramclub/cramclub.py",
            "args": ["--loglevel", "DEBUG", "start", "-i", "prod"]
        },
        {
            "name": "Python: Prod Stop",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cramclub/cramclub.py",
            "args": ["--loglevel", "DEBUG", "stop", "-i", "prod"]
        },
        {
            "name": "Python: Cache Start",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cramclub/cramclub.py",
            "args": ["start", "-i", "cache"]
        },
        {
            "name": "Python: Cache Stop",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cramclub/cramclub.py",
            "args": ["stop", "-i", "cache"]
        },
        {
            "name": "Python: Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cramclub/cramclub.py",
            "args": ["test"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "cwd": "${workspaceFolder}"
        },
    ]
}